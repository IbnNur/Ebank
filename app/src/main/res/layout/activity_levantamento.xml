<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Levantamento">

    <ImageView
        android:id="@+id/logotipo"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/ebanks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"/>
    <EditText
        android:id="@+id/dep_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:hint="NÃºmero da conta"
        android:inputType="number"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dep_conta"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Valor a Levantar"
        android:inputType="numberDecimal"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/levantar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Levantar"/>

</RelativeLayout>