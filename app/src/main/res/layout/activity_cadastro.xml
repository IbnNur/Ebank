<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Cadastro">

    <ImageView
        android:id="@+id/logotipo"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/ebank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/>
    <EditText
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logotipo"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="Nome"
        android:inputType="text"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/numero_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_below="@+id/nome"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Número de conta"
        android:inputType="number"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numero_conta"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/bi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senha"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Número de BI"
        android:inputType="text"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/data_nasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bi"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Data de nascimento"
        android:inputType="text"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/local_nasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_nasc"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Local de nascimento"
        android:inputType="text"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/local_nasc"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Saldo da conta"
        android:inputType="numberDecimal"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/tipo_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saldo"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Tipo de conta"
        android:inputType="text"
        android:textColor="@color/Orange_500"
        android:textColorHint="@color/Orange_500"
        android:textSize="17sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/criar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipo_conta"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Criar conta"/>

</RelativeLayout>